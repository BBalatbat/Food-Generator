#include <iostream>
#include <ctime>
#include <cstdlib>
using namespace std;

int main ()
{
  srand(time(0));
  int FoodVariable = 0;
  int StartVariable = 0;
  cout << "Enter 1 to generate food choice." << endl;
  cin >> StartVariable;
  if (StartVariable == 1)
  {
    FoodVariable = rand()%6+1;
    switch (FoodVariable)
    {
      case 1:
      cout << "Sushi" << endl;
      return 0;
      break;

      case 2:
      cout << "Hotpot" << endl;
      return 0;
      break;

      case 3:
      cout << "Ramen" << endl;
      return 0;
      break;

      case 4:
      cout << "Burgers" << endl;
      return 0;
      break;

      case 5:
      cout << "Mexican" << endl;
      return 0;
      break;

      case 6:
      cout << "Pho" << endl;
      return 0;
      break;
    }
  }
  else
  {
    return 0;
  }
}
